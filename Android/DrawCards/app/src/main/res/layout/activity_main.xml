<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_main"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/md_black_1000"
        app:layout_constraintBottom_toTopOf="@+id/button_open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_blue_92x31"
        android:text="Open"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_main_cardBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView_main"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_main"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_main"
        app:layout_constraintTop_toTopOf="@+id/recyclerView_main"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/imageView_main_smoke"
        android:layout_width="240dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_main_cardBack"
        app:layout_constraintEnd_toEndOf="@+id/imageView_main_cardBack"
        app:layout_constraintStart_toStartOf="@+id/imageView_main_cardBack"
        app:layout_constraintTop_toTopOf="@+id/imageView_main_cardBack"
        app:srcCompat="@drawable/card_aura_gray_128x128_01" />


    <ImageView
        android:id="@+id/imageView_main_innerSmoke"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_main_cardBack"
        app:layout_constraintEnd_toEndOf="@+id/imageView_main_cardBack"
        app:layout_constraintStart_toStartOf="@+id/imageView_main_cardBack"
        app:layout_constraintTop_toTopOf="@+id/imageView_main_cardBack" />

    <View
        android:id="@+id/view_main_shine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_white_1000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_main_cardBack"
        app:layout_constraintEnd_toEndOf="@+id/imageView_main_cardBack"
        app:layout_constraintStart_toStartOf="@+id/imageView_main_cardBack"
        app:layout_constraintTop_toTopOf="@+id/imageView_main_cardBack" />

</android.support.constraint.ConstraintLayout>